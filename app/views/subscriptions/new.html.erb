
        <!-- ========== HEADER ========== -->
        <header class="header main-header header-style-3" id="circular-particles">
            <div class="primary-trans-bg">
                <div class="container">
                    <!-- For centering the content vertically -->
                    <div class="outer">
                        <div class="inner">
                            <div class="row">
                                <div class="col-md-6 col-sm-8 col-md-offset-3 col-sm-offset-2 form-wrap">
                                    <div class="text-center logo-wrap">
                                        <a href="/"><img src="/frontend/images/dark-logo.png" alt="" width="125"></a>
                                    </div> <!-- end text-center -->

                                      <%= form_tag subscription_path, id: "payment-form" do %>
                                      <% if current_user.card_last4? %>
                                        <div class="card-on-file">
                                          <p>Your current card on file is:</p>
                                          <div><%= current_user.card_type %> **** **** **** <%= current_user.card_last4 %></div>
                                          <div>Expires <%= current_user.card_exp_month %> / <%= current_user.card_exp_year %></div>

                                          <p><%= link_to "Use a different card", "#", class: "use-different-card" %></p>
                                        </div>
                                      <% end %>

                                      <div class="card-fields <%= card_fields_class %>">
                                        <span class="payment-errors"></span>

                                        <div class="form-row">
                                          <label>
                                            <span>Card Number</span>
                                            <input value="" class="form-control" type="text" size="20" data-stripe="number"/>
                                          </label>
                                        </div>

                                        <div class="form-row">
                                          <label>
                                            <span>CVC</span>
                                            <input value="" class="form-control" type="text" size="4" data-stripe="cvc"/>
                                          </label>
                                        </div>

                                        <div class="form-row">
                                          <span style="font-weight: bold;">Expiration (MM/YYYY)</span>
                                          <label>
                                            <input value="" type="text" size="2" data-stripe="exp-month" style="width:45%; float:left;" />
                                            <span style="width:9%; text-align: center; float:left; margin-top:10px;"> / </span>
                                            <input value="" type="text" size="4" data-stripe="exp-year" style="width:45%; float:left;" />
                                          </label>
                                        </div>
                                      </div>
                                      <input type="hidden" name="planid" value="monthly">

                                      <button type="submit" style="padding-top:0px;" class="btn se-btn btn-rounded">Submit Payment</button>
                                    <% end %>

                                </div>
                            </div> <!-- end row -->
                        </div> <!-- end inner -->
                    </div> <!-- end outer -->
                </div> <!-- end container -->
            </div> <!-- end primary-trans-bg -->
        </header>
