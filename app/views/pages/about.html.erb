                    <div class="col-md-4">
                        <h4 class="underline">Optimal Suite</h4>
                        <ul class="highlights">
                            <li><i class="icon ion-checkmark"></i>Looks awesome on any device</li>
                            <li><i class="icon ion-checkmark"></i>Trusted by our users</li>
                            <li><i class="icon ion-checkmark"></i>24*7 Access</li>
                        </ul>
                    </div> <!-- end col-md-6 -->
                </div> <!-- end row -->
            </div> <!-- end container -->
        </section>

