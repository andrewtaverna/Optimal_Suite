<%= form_for @dashboard do |f| %>
  <% if @dashboard.errors.any? %>
    <div class="error_messages">
      <h2><%= pluralize(@dashboard.errors.count, "error") %> prohibited these tasks from being saved:</h2>
      <ul>
      <% @dashboard.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= f.fields_for :questions do |builder| %>
    <%= render 'question_fields', f: builder %>
  <% end %>

<% unless @results.length > 0 %>
  <%= link_to_add_fields "Add Task", f, :questions %>
  
  <br><br>


  <div class="actions">
    <%= f.submit 'Update Dashboard', class: 'btn btn-default' %>
  </div>

  <% end %>
<% end %>