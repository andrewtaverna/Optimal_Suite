<% content_for :title do %>New Campaign - Optimal Suite<% end %>
<div class="container">
	<%= form_for Dashboard.new, :url => dashboards_path do |f| %>  
	  <div class="field"> 

	    <h3 style="text-align: center; font-size: 25px; color: #647583;">Create a New Campaign</h3><br>
	    
        <p>
	      Campaign Name: <br>
	      <%= f.text_field :title, class: "form-control input-lg" %>
	    </p>
        <p>
	      Description: <br>
	      <%= f.text_area :description, class: "form-control input-lg" %>
	    </p>
	  </div> 
	  <div class="actions"> 
	    <%= f.submit "Create", class: "btn btn-default"  %> 
	  </div> 
	<% end %>
</div>